<h1>Listing books</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Autor</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>      
    </tr>
  <% end %>
</table>

<%= link_to 'Cadastrar livro', new_book_path %>
